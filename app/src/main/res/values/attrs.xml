<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PersonalItemView">
        <attr name="leftIcon" format="reference" />
        <attr name="contextText" format="string" />
        <attr name="rightText" format="string" />
    </declare-styleable>

    <declare-styleable name="HotelTitleBar">
        <attr name="leftBtnText" format="string" />
        <attr name="rightBtnText" format="string" />
        <attr name="leftBtnIcon" format="reference" />
        <attr name="rightBtnIcon" format="reference" />
        <attr name="titleText" format="string" />
        <attr name="isShowUnderLine" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ToggleButton">
        <attr name="tbwidth" format="dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
        <attr name="animate" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="indicator_radio" format="dimension" />
        <attr name="indicator_margin" format="dimension" />
        <attr name="indicator_background" format="color|integer" />
        <attr name="indicator_selected_background" format="color|integer" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="text_color" format="color|integer"/>
        <attr name="select_text_color" format="color|integer"/>
    </declare-styleable>


    <declare-styleable name="HideTitle">
        <attr name="mid_text" format="string"/>
        <attr name="left_img" format="reference"/>
        <attr name="right_img1" format="reference"/>
        <attr name="right_img2" format="reference"/>
        <attr name="add_status_view" format="boolean"/>
        <attr name="hide_background" format="color"/>
        <attr name="title_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ListText">
        <attr name="title_text" format="string"/>
        <attr name="content_text" format="string"/>

    </declare-styleable>

</resources>