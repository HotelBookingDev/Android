<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:text">@string/title</item>
    </style>

    <style name="titleTextStyleWhite" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text_color_while</item>
        <item name="android:text">@string/title</item>
    </style>

    <style name="hotelRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@mipmap/ic_star_border_black_36dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:numStars">4</item>
        <item name="android:isIndicator">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="titleTextContentStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_text_content_size</item>
        <item name="android:textColor">@color/title_text_color_while</item>
        <item name="android:text">titleTextContentStyle</item>
    </style>

    <style name="headerDetailTextTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/detail_text_color_blue</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">headerDetailTextTitleStyle</item>

    </style>

    <style name="headerDetailTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/detail_text_color_blue</item>
        <item name="android:textSize">@dimen/title_text_content_size</item>
        <item name="android:text">headerDetailTextStyle</item>

    </style>

    <style name="splitLineStyle">
        <item name="android:background">@color/bg_gray</item>
    </style>

    <style name="splitLineGrayStyle">
        <item name="android:background">@color/bg_more_gray_black</item>
    </style>


    <style name="layoutStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="itemTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/item_text_title_size</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>

    <style name="itemTextContentStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/item_text_content_size</item>
        <item name="android:textColor">@color/item_content_color</item>
    </style>

    <style name="itemTextPriceStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/item_text_price</item>
        <item name="android:textColor">@color/item_price_color</item>
    </style>

    <style name="itemTextContentStyleBlue" parent="@android:style/Widget.TextView">

        <item name="android:textSize">@dimen/item_text_content_size</item>
        <item name="android:textColor">@color/detail_text_color_blue</item>
    </style>

    <style name="button_green">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <!--个人界面每一个item的样式-->
    <style name="group_item">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_selector_relativelayout_item</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
    </style>
    <!--view_title的样式-->
    <style name="view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
    </style>

    <!--编辑密码框的统一样式-->
    <style name="edit_pwd">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:digits">@string/edit_text_password</item>
    </style>

    <style name="invoice_edit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <!--登录界面的编辑框-->
    <style name="login_edit" parent="edit_pwd">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:textColorHint">@color/hit_text</item>
        <item name="android:textColor">@color/hit_text</item>

    </style>

    <style name="normal_text">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/normal_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_bar_full</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="pay_menu_animation">
        <item name="android:windowEnterAnimation">@anim/pay_menu_up</item>
        <item name="android:windowExitAnimation">@anim/pay_menu_down</item>
    </style>

    <style name="order_txt">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hit_text</item>
    </style>

    <style name="waltter_txt" parent="order_txt">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
