<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_get_start"
    tools:context=".view.fragment.login.LoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90.0dip" />

            <LinearLayout
                android:id="@+id/lngroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="240.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/bg_edittext_login"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_country_phone_code"
                        android:layout_width="70.0dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_country_phone_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:text="@string/phone_prefix"
                            android:textColor="@android:color/white"
                            android:textSize="12.0dip" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_search_drop_down_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:alpha="0.5"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/login_edit"
                        android:digits="@string/edittext_digits"
                        android:hint="@string/phoneNum"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11" />

                    <ImageView
                        android:id="@+id/iv_clear"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:src="@mipmap/ic_clear_text"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="20.0dip"
                    android:background="@drawable/bg_edittext_login"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="70.0dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_password_white" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:alpha="0.5"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/edit_pw"
                        style="@style/login_edit"
                        android:hint="@string/password" />

                    <ImageView
                        android:id="@+id/iv_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="15.0dip" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forgot_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lngroup"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20.0dip"
                android:gravity="center"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/tv_forgot_pw"
                android:textColor="@color/forgot_color"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/tv_just_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_forgot_pw"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/just_look"
                android:textColor="@color/forgot_color"
                android:textSize="14.0dip" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/login_btn"
                style="@style/button_green"
                android:layout_below="@+id/tv_just_look"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/forgot_color"
                fancy:fb_radius="100dp"
                fancy:fb_text="@string/btn_login" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/register_btn"
                style="@style/button_green"
                android:layout_below="@+id/login_btn"
                android:layout_marginTop="4dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/forgot_color"
                fancy:fb_radius="100dp"
                fancy:fb_text="@string/btn_register" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
