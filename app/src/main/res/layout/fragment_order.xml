<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sf.hotel.com.hotel_client.view.fragment.person.OrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <sf.hotel.com.hotel_client.view.custom.HotelTitleView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            app:leftBtnText="@string/back"
            app:titleText="@string/my_order">

        </sf.hotel.com.hotel_client.view.custom.HotelTitleView>

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_title" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tl_order"></android.support.v4.view.ViewPager>
    </RelativeLayout>
</FrameLayout>
