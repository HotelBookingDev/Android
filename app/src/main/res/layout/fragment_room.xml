<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <sf.hotel.com.hotel_client.view.custom.PullScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/frag_room_scrollview"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/frag_room_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        fancy:fb_defaultColor="@color/white"
        fancy:fb_focusColor="@color/bg_person"
        fancy:fb_text="@string/search_times"
        fancy:fb_textColor="@color/black"
        />


</LinearLayout>