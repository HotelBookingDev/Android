<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <sf.hotel.com.hotel_client.view.custom.HotelSearchTitle

            android:id="@+id/custom_timer_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/btn_height"
            app:tag_text="@string/in_hotel_time"
            app:hotel_title_content_text="7月21日"
            app:des_text="星期四"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            style="@style/splitLineStyle"
            />

        <sf.hotel.com.hotel_client.view.custom.HotelSearchTitle
            android:id="@+id/custom_timer_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/btn_height"
            app:tag_text="@string/out_hotel_time"
            app:hotel_title_content_text="7月21日"
            app:des_text="星期四"
            />
    </LinearLayout>
</LinearLayout>