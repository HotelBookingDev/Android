<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <sf.hotel.com.hotel_client.view.custom.CustomBookingSearch
        android:id="@+id/fragment_booking_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        app:booking_item_content_color="@color/booking_text_gray_while"
        app:booking_item_name="@string/card_bank"/>


    <sf.hotel.com.hotel_client.view.custom.CustomBookingItem
        android:id="@+id/fragment_booking_bank_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        app:booking_item_content_color="@color/booking_text_gray_while"
        app:booking_item_content_enabled="true"
        app:booking_item_name="@string/card_number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="90dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/term_validity"
            android:textColor="@color/hotels_text_color_green"
            />

        <EditText
            android:id="@+id/fragment_booking_bank_year"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content"
            android:background="@color/content_bg"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textColor="@color/hotels_text_color_green"
            />

        <EditText
            android:id="@+id/fragment_booking_bank_mouth"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:background="@color/content_bg"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textColor="@color/hotels_text_color_green"
            />


    </LinearLayout>
</LinearLayout>