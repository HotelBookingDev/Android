<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/layoutStyle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/itemTextStyle"
            android:id="@+id/item_room_title"
            android:text="XXX大床房"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/itemTextContentStyle"
            android:layout_below="@id/item_room_title"
            android:id="@+id/item_room_content"
            android:text="无早 大/双床 可住2人"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_room_content"
            android:text="优惠卷"
            android:textColor="#ff8800"
            />


    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="80dp"
        style="@style/splitLineStyle"
        android:layout_gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layoutStyle"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/itemTextPriceStyle"
            android:id="@+id/item_room_price"
            android:text="$ 388"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/reserve"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_room_price"
            />
    </RelativeLayout>


</LinearLayout>