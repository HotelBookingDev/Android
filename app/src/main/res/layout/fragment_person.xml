<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.person.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <sf.hotel.com.hotel_client.view.custom.HotelTitleView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            app:titleText="@string/my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_title"
            android:orientation="vertical">

            <sf.hotel.com.hotel_client.view.custom.PersionItemView
                android:id="@+id/piv_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contextText="@string/my_info" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersionItemView
                android:id="@+id/piv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contextText="@string/my_money" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersionItemView
                android:id="@+id/piv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contextText="@string/my_order" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersionItemView
                android:id="@+id/piv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contextText="@string/my_evaluate" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersionItemView
                android:id="@+id/piv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contextText="@string/my_setting" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
