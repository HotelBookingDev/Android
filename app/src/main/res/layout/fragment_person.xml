<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.person.PersonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/head_user"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersonalItemView
                android:id="@+id/piv_person"
                style="@style/group_item"
                app:contextText="@string/my_info"
                app:leftIcon="@mipmap/personal_icon" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersonalItemView
                android:id="@+id/piv_invoice"
                style="@style/group_item"
                app:contextText="@string/my_invoice"
                app:leftIcon="@mipmap/ilnvoice_icon" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersonalItemView
                android:id="@+id/piv_setting"
                style="@style/group_item"

                app:contextText="@string/my_setting"
                app:leftIcon="@mipmap/setting_icon" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersonalItemView
                android:id="@+id/piv_help"
                style="@style/group_item"

                app:contextText="@string/help"
                app:leftIcon="@mipmap/help_icon" />

            <include layout="@layout/item_line" />

            <sf.hotel.com.hotel_client.view.custom.PersonalItemView
                android:id="@+id/piv_about_us"
                style="@style/group_item"
                app:contextText="@string/about_us"
                app:leftIcon="@mipmap/aboutus_icon" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
